                    <td>@stock.pension_fund.ToString("N0")</td>
                    <td>@stock.other_corporation.ToString("N0")</td>
                    <td>@stock.individual.ToString("N0")</td>
                    <td>@stock.foreigner.ToString("N0")</td>
                    <td>@stock.trade_date.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
</div>